<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gaurav.fitorflab.DetailsActivity"
    android:background="#42a5f5"
    android:animateLayoutChanges="false">

    <TextView
        android:text="Weight Lifting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleView"
        android:autoText="true"
        android:textSize="30sp"
        android:textColor="@android:color/background_light"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/weight2x"
        android:id="@+id/exerciseImage"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:paddingTop="15dp"
        android:elevation="0dp"
        android:paddingStart="5dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#20000000"
        android:gravity="center_horizontal"
        android:id="@+id/mainBG">

        <TextView
            android:text="Mark it complete!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:paddingTop="10dp" />

        <CheckBox
            android:text="Complete Set 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2"
            android:textSize="20sp"
            android:textColor="@android:color/background_light"
            android:paddingLeft="115dp"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:minHeight="1dp"
            android:checked="false"
            android:layout_marginTop="25dp"
            android:gravity="start"
            app:buttonTint="@android:color/background_light" />

        <CheckBox
            android:text="Complete Set 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox3"
            android:textSize="20sp"
            android:textColor="@android:color/background_light"
            android:paddingLeft="115dp"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:minHeight="0dp"
            android:checked="false"
            android:gravity="start"
            app:buttonTint="@android:color/background_light"
            android:layout_marginTop="5dp" />

        <CheckBox
            android:text="Complete Set 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox4"
            android:textSize="20sp"
            android:textColor="@android:color/background_light"
            android:paddingLeft="115dp"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:minHeight="1dp"
            android:checked="false"
            android:gravity="start"
            app:buttonTint="@android:color/background_light"
            android:layout_marginTop="5dp" />

        <CheckBox
            android:text="Complete Set 4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox5"
            android:textSize="20sp"
            android:textColor="@android:color/background_light"
            android:paddingLeft="115dp"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:minHeight="1dp"
            android:checked="false"
            android:gravity="start"
            app:buttonTint="@android:color/background_light"
            android:layout_marginTop="5dp" />

        <CheckBox
            android:text="Complete Set 5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox6"
            android:textSize="20sp"
            android:textColor="@android:color/background_light"
            android:paddingLeft="115dp"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:minHeight="1dp"
            android:checked="false"
            android:gravity="start"
            app:buttonTint="@android:color/background_light"
            android:layout_marginTop="5dp" />

    </LinearLayout>
</LinearLayout>
